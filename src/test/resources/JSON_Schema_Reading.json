{
    "title": "JSON-Schema Reading",
    "type": "object",
    "required": [
        "reading"
    ],
    "properties": {
        "reading": {
            "type": "object",
            "required": [
                "customer",
                "dateOfReading",
                "meterId",
                "substitute",
                "meterCount",
                "kindOfMeter"
            ],
            "properties": {
                "id": {
                    "type": ["string", "null"]
                },
                "customer": {
                    "anyOf": [
                        {
                            "type": "object",
                            "required": [
                                "firstName",
                                "lastName",
                                "gender"
                            ],
                            "properties": {
                                "uuid": {
                                    "type": ["string", "null"]
                                },
                                "firstName": {
                                    "type": "string"
                                },
                                "lastName": {
                                    "type": "string"
                                },
                                "birthDate": {
                                    "type": ["string", "null"],
                                    "format": "date"
                                },
                                "gender": {
                                    "type": "string",
                                    "enum": ["D", "M", "U", "W"]
                                }
                            }
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "dateOfReading": {
                    "type": "string",
                    "format": "date"
                },
                "comment": {
                    "type": ["string", "null"]
                },
                "meterId": {
                    "type": "string"
                },
                "substitute": {
                    "type": "boolean"
                },
                "meterCount": {
                    "type": "number"
                },
                "kindOfMeter": {
                    "type": "string",
                    "enum": ["HEIZUNG", "STROM", "WASSER",
                      "UNBEKANNT"]
                }
            }
        }
    }
}