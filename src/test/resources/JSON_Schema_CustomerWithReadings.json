{
    "title": "JSON-Schema Customer with readings",
    "type": "object",
    "required": ["customer", "readings"],
    "properties": {
        "customer": {
            "type": "object",
            "required": ["uuid", "firstName", "lastName", 
                          "gender"],
                "properties": {
                    "uuid": {
                        "type": "string"
                    },
                    "firstName": {
                        "type": "string"
                    },
                    "lastName": {
                        "type": "string"
                    },
                    "birthDate": {
                        "type": "string",
                        "format": "date"
                    },
                    "gender": {
                        "type": "string",
                        "enum": ["D", "M", "U", "W"]
                    }
                }
            }
        },
        "readings": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["uuid", "customer", "dateOfReading", 
                     "meterId", "substitute", "metercount", 
                     "kindOfMeter"],
                "properties": {
                    "uuid": {
                        "type": "string"
                    },
                    "customer": {
                        "type": "null"
                    },
                    "dateOfReading": {
                        "type": "string",
                        "format": "date"
                    },
                    "comment": {
                        "type": ["string", "null"]
                    },
                    "meterId": {
                        "type": "string"
                    },
                    "substitute": {
                        "type": "boolean"
                    },
                    "metercount": {
                        "type": "number"
                    },
                    "kindOfMeter": {
                        "type": "string",
                        "enum": ["HEIZUNG", "STROM", "WASSER", 
                                  "UNBEKANNT"]
                    }
                }
            }
        }
    }
}